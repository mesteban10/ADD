<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ut03.ex03_alerts.presentation.Ut03Ex03Activity">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@color/teal_700"
            android:src="@drawable/ic_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/icon_alert"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Recomendaciones de manejo Periodo estival 2021" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/date_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/icon_alert"
            app:layout_constraintTop_toBottomOf="@+id/title_alert"
            tools:text="21/06/2021" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/description_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:maxLines="5"
            app:layout_constraintStart_toEndOf="@id/icon_alert"
            app:layout_constraintTop_toBottomOf="@+id/date_alert"
            tools:text="Recomendaciones de manejo. Periodo estival 2021 21 Junio de 2021.Para agricultores cosecha y post-cosechacosechar lo mas superficial posible.
                Retirar las pacas, los cordones de paja o el. . ." />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>